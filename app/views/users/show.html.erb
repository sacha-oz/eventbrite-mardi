<!DOCTYPE html>
<html lang="en">
  <body>
  <div class="d-flex justify-content-between">
  	<div class="">
  		<%= image_tag 'bras.jpg' %>
  	</div>
    <div class="container ">
      <div class="d-flex flex-column bd-highlight mb-3">
        <div class="p-2 bd-highlight">
            <h3>Qui</h3>
            <p class="lead mb-0"> <%= @user.first_name %> <%= @user.last_name %></p>
        </div>
        <div class="p-2 bd-highlight">
            <h3>Email</h3>
            <p class="lead mb-0"> <%= @user.email %></p>
        </div>
        <div class="p-2 bd-highlight">
            <h3>Description</h3>
            <p class="lead mb-0"><%= @user.description %> </p>
        </div>
        <div class="p-2 bd-highlight">
            <h3>Organise</h3>
            <p class="lead mb-0"><%= @user.events.to_a.size %> évènement(s) </p>
            <% for i in 0...@user.events.to_a.size %>
            	<p> <%= @user.events.to_a[i].title %> le : <%= @user.events.to_a[i].start_date.to_date %></p>
            <% end %>
        </div>
      </div>
      <% if current_user.id == @user.id %>
    	<div class="btn btn-danger btn-lg"> <%= link_to "Editer",edit_user_registration_path, :class => "text-white" %></div>
      <% end %>
    </div>
    </br> </br> </br>
  </div>
  </body>
</html>
